{
  "version": 2,
  "builds": [
    { "src": "database/app.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/database/app.js" },
    { "src": "/catalogo/catalogo.html", "dest": "/catalogo.html" },
    { "src": "/biblioteca/biblioteca.html", "dest": "/biblioteca.html" },
    { "src": "/simulador/simulador.html", "dest": "/simulador.html" },
    { "src": "/historico/historico.html", "dest": "/historico.html" },
    { "src": "/perfil/perfil.html", "dest": "/perfil.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
} 
{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/test-login", "dest": "/api/test-login.js" },
    { "src": "/api/login", "dest": "/api/login.js" },
    { "src": "/api/(.*)", "dest": "/api/app.js" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
} 
RewriteEngine On

# Redirecionar URLs com subpastas para a raiz
RewriteRule ^catalogo/catalogo\.html$ /catalogo.html [R=301,L]
RewriteRule ^biblioteca/biblioteca\.html$ /biblioteca.html [R=301,L]
RewriteRule ^simulador/simulador\.html$ /simulador.html [R=301,L]
RewriteRule ^historico/historico\.html$ /historico.html [R=301,L]
RewriteRule ^perfil/perfil\.html$ /perfil.html [R=301,L]

# Redirecionar URLs sem .html para .html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^\.]+)$ $1.html [NC,L] 
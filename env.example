# ==========================================
# CONFIGURAÇÕES DO PROJETO PERSPECTIVE
# ==========================================

# Configurações do Banco de Dados PostgreSQL
DB_HOST=pearspective_postgres
DB_PORT=5432
DB_NAME=pearspective
DB_USER=pearspective_user
DB_PASSWORD=pearspective_password

# Configurações do Servidor
PORT=3000
NODE_ENV=production

# Configurações de Segurança
JWT_SECRET=seu_jwt_secret_aqui_$(openssl rand -hex 32)
SESSION_SECRET=seu_session_secret_aqui_$(openssl rand -hex 32)

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de Cache (Redis)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Configurações de Upload
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads

# Configurações de Email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_app

# Configurações de API Externa (opcional)
UDEMY_API_KEY=sua_chave_api_udemy
OPENAI_API_KEY=sua_chave_api_openai



# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Diário às 2h da manhã
BACKUP_RETENTION_DAYS=30

# Configurações de Performance
WORKER_THREADS=4
MAX_CONNECTIONS=100
TIMEOUT=30000

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100 